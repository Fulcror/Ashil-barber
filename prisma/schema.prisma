generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("ashil_DATABASE_URL")
}

model AvailabilityRange {
  id        Int    @id @default(autoincrement())
  dayOfWeek Int
  startTime String
  endTime   String

  @@map("availability_ranges")
}

model BookedAppointment {
  id               Int      @id @default(autoincrement())
  startDatetimeUtc DateTime
  endDatetimeUtc   DateTime
  phoneNumber      String
  confirmationCode String   @unique
  status           String   @default("pending")
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  // Unique constraint: no two pending/confirmed appointments at same time
  @@unique([startDatetimeUtc, status], name: "uq_time_status")
  // Index for fast calendar queries
  @@index([startDatetimeUtc, status])
  @@map("booked_appointments")
}
